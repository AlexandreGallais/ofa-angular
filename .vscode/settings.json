{
    "explorer.fileNesting.patterns": {
        "tsconfig.lib.json": "tsconfig.*.json"
    },

    /* Language - All */
    "[html][css][scss][json][jsonc]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    /* Language - CSS */
    "stylelint.validate": ["css", "scss"],
    "[css][scss]": {
        "editor.codeActionsOnSave": {
            "source.fixAll.stylelint": "explicit"
        }
    },

    /* Language - JavaScript */
    "[javascript][typescript]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "dbaeumer.vscode-eslint",
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": "explicit"
        }
    },

    /* Language - Markdown */
    "[markdown]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
        "editor.codeActionsOnSave": {
            "source.fixAll.markdownlint": "explicit"
        }
    },

    /* Extension - Material Icon Theme */
    "material-icon-theme.files.associations": {
        "*.store.ts": "database"
    },
    "material-icon-theme.folders.associations": {
        "layout": "layout",
        "class": "packages",
        "component": "layout",
        "constant": "constant",
        "directive": "decorators",
        "guard": "guard",
        "model": "class",
        "pipe": "pipe",
        "service": "controller",
        "style": "sass"
    },
    "files.exclude": {
        "**/.git": false,
        "**/.svn": false,
        "**/.hg": false,
        "**/CVS": false,
        "**/.DS_Store": false,
        "**/Thumbs.db": false,
        "**/tsconfig*.json": false,
        "**/package.json": false,
        "**/angular.json": false,
        "**/ng-package.json": false,
        "**/karma.conf.js": false,
        "**/node_modules": false,
        "**/README.md": false,
        "**/.*": false
    },
    "explorerExclude.backup": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/tsconfig*.json": true,
        "**/package.json": true,
        "**/angular.json": true,
        "**/ng-package.json": true,
        "**/karma.conf.js": true,
        "**/node_modules": true,
        "**/README.md": true,
        "**/.*": true
    }
}
