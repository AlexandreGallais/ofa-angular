{
    "plugins": ["stylelint-order"],
    "extends": "stylelint-config-standard-scss",

    "rules": {
        "order/order": [
            {
                "type": "at-rule",
                "name": "include"
            },
            "custom-properties",
            "dollar-variables",
            "at-variables",
            "declarations",
            "rules",
            "at-rules",
            "less-mixins"
        ],

        "order/properties-order": [
            [
                "all",

                "content",

                "z-index",
                "position",
                "inset",
                "top",
                "right",
                "bottom",
                "left",

                "display",
                "box-sizing",
                "flex-direction",
                "place-content",
                "place-items",
                "justify-content",
                "justify-items",
                "align-content",
                "align-items",

                "width",
                "min-width",
                "max-width",
                "height",
                "min-height",
                "max-height",

                "margin",
                "margin-top",
                "margin-right",
                "margin-bottom",
                "margin-left",
                "padding",
                "padding-top",
                "padding-right",
                "padding-bottom",
                "padding-left",
                "gap",

                "color",
                "opacity",
                "visibility",

                "background",
                "background-color",
                "background-image",
                "background-position",
                "background-repeat",
                "background-size",
                "mask",
                "mask-image",
                "mask-position",
                "mask-repeat",
                "mask-size",

                "box-shadow",

                "border",
                "border-top",
                "border-right",
                "border-bottom",
                "border-left",
                "border-color",
                "border-top-color",
                "border-right-color",
                "border-bottom-color",
                "border-left-color",
                "border-radius",
                "border-top-left-radius",
                "border-top-right-radius",
                "border-bottom-left-radius",
                "border-bottom-right-radius",
                "border-width",
                "border-top-width",
                "border-right-width",
                "border-bottom-width",
                "border-left-width",
                "outline",

                "font",
                "font-family",
                "font-size",
                "font-style",
                "font-weight",

                "letter-spacing",
                "line-height",

                "text-align",
                "text-decoration",

                "overflow",
                "overflow-x",
                "overflow-y",
                "white-space",
                "text-overflow",

                "transform",
                "transition",
                "animation",

                "cursor",
                "user-select",
                "pointer-events"
            ],
            {
                "severity": "warning"
            }
        ]
    }
}
